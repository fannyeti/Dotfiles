case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "î¬ Internet module" "\- Click to connect
ï‹“ : wifi disabled
ó°–ª : no wifi connection
ï‡« : wifi connection with quality
ó°ˆ‚ : no ethernet
ó°ˆ : ethernet working
